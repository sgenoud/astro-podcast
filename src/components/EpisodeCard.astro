---
import { CONSTANTS } from "../constants.ts";
const { title, date, duration, id } = Astro.props;

const formattedDate = new Intl.DateTimeFormat(CONSTANTS.language || "en", {
  dateStyle: "long",
}).format(date);
---

<a href={`/episodes/${id}`}>
  <article>
    <hgroup>
      <h5>{title}</h5>
      <p><small>{formattedDate}</small></p>
    </hgroup>
    <slot />
  </article>
</a>

<style>
  a {
    text-decoration: none;
    color: inherit;
  }
  a:hover h5 {
    color: var(--pico-primary);
    text-decoration: underline;
  }
</style>
